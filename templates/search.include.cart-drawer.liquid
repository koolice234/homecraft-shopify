{%- layout none -%}

<dialog id="cartShopping" class="modal-ui cart-drawer{% if settings.enable_cart_qty_ajax %} js-ajax-cart{% endif %}" aria-hidden="true">
	
	<div tabindex="-1" data-dialog-close></div>
	<div class="cart-drawer-wrapper" role="dialog" aria-modal="true">

		<a href="javascript:void(0);" class="cartShopping-close" data-dialog-close>{%- render 'svg', type: 'close' -%}</a>

		<form action="{{routes.cart_url}}" method="post" novalidate class="form-cart">
			<div class="cart-head">
				<h3>
					<a href="{{routes.cart_url}}">
						{{ 'cart.general.shopping_cart' | t }}
						<span class="number" data-cart-count>{{cart.item_count}}</span>
					</a>
				</h3>
			</div>

			<div class="cart-body">
				<div class="cart-body-inner animation-fade" data-cart-body>
					{%- if cart.items.size == 0 -%}
						<span id="cart-drawer-empty">{{ 'cart.general.empty' | t }}</span>
					{%- else -%}
						
						{%- for item in cart.items -%}
							{%- render 'product-cart-line-item', item: item, number: forloop.index0 -%}
						{%- endfor -%}
					{%- endif -%}
				</div>
			</div>

			<div class="cart-foot">
				<div class="text-center">
					<div class="cart-row">
						<p>{{'cart.general.total' | t }}: <span data-cart-total>{%- render 'money-format', price: cart.total_price -%}</span></p>
						<a href="javascript:void(0);" class="clear-cart-items{% if cart.items.size == 0 %} hide{% endif %}" data-cart-remove-all>{{ "cart.general.remove_all" | t }}</a>
					</div>

					<div class="cart-row">
						<button class="btn btn-checkout btn-1" type="submit" name="checkout"{% if cart.items.size == 0 %} disabled="disabled"{% endif %}>
							<span class="buton-label">{{ "cart.general.checkout" | t }}</span>
						</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</dialog>