        let cache = [];

        function _updateCache(module, weight) {
          let item = cache.find(a => a.scriptName === module);
          if(!item) {
            cache.push({
              scriptName: module,
              weight,
              content: module.indexOf('__inline') !== -1 ? InlineScript[module] : '',
